<% if mailer_subscription.new_record? %>
  <li>
    <%= button_to method: :post do %>
      <%= mailer_subscription.attributes %>
    <% end %>
  </li>
<% else %>
  <li>
    <%= button_to mailer_subscription_path(mailer_subscription), method: :put do %>
      <%= mailer_subscription.call_to_action %>
    <% end %>
  </li>
<% end %>
